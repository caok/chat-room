<% include head %>

<h2>Real time web chat</h2>

<div class='row-fluid'>
  <div id='users_list' class='span2 well'>
    <h4>online</h4>
    <ul id="list">
    </ul>
  </div>

  <div class='span10'>
    <div id='chat_content' class='well'>
      <h3>chat content</h3>
    </div>
    <div id="sayingto">你好 <span id="from"><%= user %></span> ，你正在对 <span id="to"></span> 说</div>
    <div class='input-append'>
      <input type="text" id='chat_input' class='input-xxlarge' />
      <button id='chat_button' class='btn' type='submit'>Send</button>
    </div>
  </div>
</div>

<script type="text/javascript" src='/javascripts/jquery-1.9.1.min.js'></script>
<script type="text/javascript" src='/socket.io/socket.io.js'></script>
<script type="text/javascript" src='/javascripts/chat.js'></script>

<% include footer %>
